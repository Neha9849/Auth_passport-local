<form action="/users/register" method="post">
   
    <h1 class="text-center monospace p-2 secondaryColor ">Register</h1>
    <%- include('partials/msgs.ejs') %>
    <label for="name" class="form-label primaryColor">Name</label>
    <input type="text" class="form-control shadow-none" id="name" name="name" value="<%= typeof name !='undefined' ? name:'' %>">

    <label for="email" class="form-label primaryColor">Email</label>
    <input type="email" class="form-control  shadow-none" id="email" name="email" value="<%= typeof email !='undefined' ? email:'' %>">

    <label for="password" class="form-label primaryColor">Password</label>
    <input type="password" class="form-control shadow-none" id="password" name="password" value="<%= typeof password !='undefined' ? password:'' %>">

    <label for="cpassword" class="form-label primaryColor">Confirm Password</label>
    <input type="password" class="form-control shadow-none" id="cpassword" name="cpassword" value="<%= typeof cpassword !='undefined' ? cpassword:'' %>">

    <input type="submit" value="Register" class="btn btn-outline-light w-100 mt-3 p-2 secondaryColor">
</form>
<p class="text-light text-center mt-2">Already have an account?<a href="/users/login" class="secondaryColor">login</a></p>